@model OrdersViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
        /* Additional style for the date display */
        .date-display {
            font-weight: bold;
        }

        /* Style for the print button */
        .print-button {
            display: block;
            margin-top: 20px;
            text-align: center;
        }

         /* Hide the button when printing */
        @@media print {
            .print-button {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Order Report</h1>
        <p>Generated on: @DateTime.Now</p>
        <p class="text-center">Orders Report Date:  @DateTime.Now.ToString("yyyy-MM-dd")</p>

        <table>
            <tr>
                <th>Order ID</th>
                <th>Total Price</th>
                <th>Status</th>
            </tr>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.ID</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.Status</td>
                </tr>
            }
        </table>
        <!-- Print button -->
        <div class="print-button">
            <button onclick="window.print()" >Print Report</button>
        </div>
    </div>
</body>
</html>
